<% if (typeof noLayout === 'undefined' || !noLayout) { %>
<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="style.css">
  </head>
  <body class="bg-base-100">
    <main class="container mx-auto p-4"><%- body %></main>
    <%- include('footer') %>
  </body>
</html>

<% } else { %>
<!DOCTYPE html>
<html lang="en" data-theme="cupcake">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-base-100">
    <%- include('announcement_bar') %> <%- include('header') %>
    <main class="container mx-auto p-4"><%- body %></main>
    <%- include('footer') %>
  </body>
</html>
<% } %>
