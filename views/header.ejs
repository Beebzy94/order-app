<header class="flex justify-between items-center px-6 py-6 bg-white">
  <!-- Logo -->
  <div class="logo">
    <img src="/assets/LOGO 1.png" alt="logo image" class="w-44" />
  </div>

  <!-- Navbar -->
  <nav class="flex items-center justify-evenly gap-2">
    <a
      href="/"
      class="btn btn-sm btn-ghost rounded-full py-4 px-6 hover:bg-orange-500 hover:text-white <%= currentRoute === '/' ? 'bg-orange-500 text-white' : 'text-gray-800' %>"
    >
      Home
    </a>

    <a
      href="/restaurants"
      class="btn btn-sm btn-ghost rounded-full py-4 px-6 hover:bg-orange-500 hover:text-white <%= currentRoute === '/restaurants' ? 'bg-orange-500 text-white' : 'text-gray-800' %>"
      >Restaurants</a
    >
    <a
      href="#"
      class="btn btn-sm btn-ghost rounded-full py-4 px-6 hover:bg-orange-500 hover:text-white <%= currentRoute === '/browse_menu' ? 'bg-orange-500 text-white' : 'text-gray-800' %>"
      >Browse Menu</a
    >
    <a
      href="#"
      class="btn btn-sm btn-ghost rounded-full py-4 px-6 hover:bg-orange-500 hover:text-white <%= currentRoute === '/special_offers' ? 'bg-orange-500 text-white' : 'text-gray-800' %>"
      >Special Offers</a
    >
    <a
      href="#"
      class="btn btn-sm btn-ghost rounded-full py-4 px-6 hover:bg-orange-500 hover:text-white <%= currentRoute === '/track_order' ? 'bg-orange-500 text-white' : 'text-gray-800' %>"
      >Track Order</a
    >
  </nav>

  <!-- Login Button -->
  <a
    href="/login"
    class="btn btn-primary btn-md flex items-center gap-2 py-4 px-6 rounded-full bg-black text-white hover:bg-gray-800"
  >
    <img src="/assets/Male User.png" alt="male icon" class="w-8 h-8" />
    <span>Login/Signup</span>
  </a>
</header>
